<%-include("header")%>
 <!-- Table Start -->
 <div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">View Seactive Admin Record</h6>
                <form width="100%" >
                    <input type="text" name="search" class="form-control" placeholder="search hear.." value="<%=search %>" style="position: relative;">
                    <input type="submit" class="btn btn-primary m-2"  value="submit" style="position: absolute;
                    top: 146px;
                    right: 41px;"/>
                </form>
                <div class="table-responsive">
                    <table class="table">
                    
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">gender</th>
                                <th scope="col">hobby</th>
                                <th scope="col">Discription</th>
                                <th scope="col">Image</th>
                                <th scope="col">Status</th>
                                <th scope="col" colspan="2" style="text-align: center;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%if(admines !=""){%>
                            <% var i=1;for(var ad of admines){%>
                            <tr>
                                <th scope="row"><%=i++%></th> 
                                <td><%=ad.name%></td>
                                <td><%=ad.email%></td>
                                <td><%=ad.gender%></td>
                                <td><%=ad.hobby%></td>
                                <td><%=ad.Discription%></td>
                                <td><img src="<%=ad.Admineimage%>" height="100"/></td>
                                <td><% if(ad.IsActive){%>
                                    <a href="/admin/isactive/<%=ad.id%>" class=" px-1 text-success">Active</a>
                                    <%}else{%>
                                        <a href="/admin/isdeactive/<%=ad.id%>" class=" px-1 text-danger">Deactive</a>
                                    <%}%>
                                </td>
                                <td>
                                    <a href="/admin/updaterecord/<%=ad.id%>" class="text-info">update</a>
                                   
                                </td>
                                <td>
                                    <a href="/admin/delterecrod/<%=ad.id%>" class="text-warning">delete</a>
                                </td>
                            </tr>
                          <%}} else{%>
                            <tr>
                                <td colspan="8">No Record Found!!</td>
                            </tr>
                          <%}%>
                          <tr>
                            <td colspan="10" align="center"> 
                                <%var prepage =  parseInt(curentpage)-1%>
                                <%if(prepage>=0){%>
                                    <a href="?page=<%=prepage%>&search=<%=search%>">back</a>
                                <%}%>
                                <a href="?page=<%=curentpage%>&search=<%=search%>"><%=parseInt(curentpage)+1%></a>
                                <%var nextpage =  parseInt(curentpage)+1%>
                                <%if(totalDocument>nextpage){%>
                                    <a href="?page=<%=nextpage%>&search=<%=search%>">next</a>
                                <%}%>
                            </td>
                         </tr>
                        
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Table End -->
<%-include("footer")%>